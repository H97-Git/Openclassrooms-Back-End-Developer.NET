@inject NavigationManager _myNavigationManager
<section id="banner" class="banner">
    <div class="bg-color">
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="col-md-12">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/">
                            <img src="/img/logo.png" class="img-responsive" style="width: 140px; margin-top: -16px;">
                        </a>
                    </div>
                    <div class="collapse navbar-collapse navbar-right" id="myNavbar">
                        <ul class="nav navbar-nav">
                            @switch (_uri)
                            {
                                case "Home":
                                    <li class="active">
                                        <a href="">Home</a>
                                    </li>
                                    <li class="">
                                        <a href="#service">Services</a>
                                    </li>
                                    <li class="">
                                        <a href="#doctor-team">Our Team</a>
                                    </li>
                                    <li class="">
                                        <a href="#contact">Contact</a>
                                    </li>
                                    break;
                                case "Calendar":
                                    <li class="">
                                        <a href="/">Home</a>
                                    </li>
                                    <li class="">
                                        <a href="/#service">Services</a>
                                    </li>
                                    <li class="">
                                        <a href="/#doctor-team">Our Team</a>
                                    </li>
                                    <li class="">
                                        <a href="/#contact">Contact</a>
                                    </li>
                                    break;
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <div class="banner-info">
                    <div class="banner-logo text-center">
                        <img src="/img/logo.png" class="img-responsive">
                    </div>
                    <div class="banner-text text-center">
                        <h1 class="white">CALIFORNIAN HEALTH</h1>
                        <p>Healthcare at your desk</p>
                        <a href="Booking" class="btn btn-appoint">Make an Appointment.</a>
                    </div>
                    <div class="overlay-detail text-center">
                        <a>
                            <i class="fa fa-angle-down"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code{
    private string _uri = "";

    protected override void OnInitialized()
    {
        _uri = "Home";
        if (_myNavigationManager.Uri.Contains("Calendar"))
        {
            _uri = "Calendar";
        }
    }

}